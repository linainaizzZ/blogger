<%- include("./public/header.ejs")%>


    <h1>我的博客</h1>
    <% data.forEach(item=>{ %>

        <a href="/article/info/<%= item.id %>" class="list-group-item">
            <%= item.title %>
                <span class="badge" style="background-color: #5bc0de;">发表时间：<%= item.ctime %></span>
                <span class="badge" style="background-color: #f0ad4e;">作者昵称：<%= item.nickname %></span>
        </a>
        <% }) %>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="<%= nowpage-1<1?'disabled':''%>">
                        <<%=nowpage-1<1? 'span': 'a'%> href=" /?page=
                            <%=nowpage-1<1?1:nowpage-1 %>"aria-label="Previous"><span aria-hidden="true">&laquo;</span></<%=nowpage-1<1? 'span': 'a' %>>
                    </li>

                    <% for(let i =0;i<moreSize;i++){%>
                        <li class='<%= nowpage==(i+1)?"active": ""%>'>
                            <a href="/?page=<%= i+1%>">
                                <%= i+1%>
                            </a>
                        </li>
                        <% } %>
                            <li class="<%=  nowpage+1 > moreSize?'disabled':''   %>   ">
                                <<%=nowpage+1> moreSize?'span':'a' %> href="/?page=
                                    <%=nowpage+1>moreSize  ? moreSize:nowpage+1 %>" aria-label="Next"><span aria-hidden="true">&raquo;</span></<%=nowpage+1> moreSize?'span':'a' %>>
                            </li>
                </ul>
            </nav>
            <%- include("public/footer.ejs") %>